<Window x:Class="WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Eye Tracker" Click="EyeTracker_onClick">
            </MenuItem>
        </Menu>
        <Grid>
            <Button  x:Name="ZoomPrototypeButton" Content="Zoom Test Module" HorizontalAlignment="Center" Margin="0,0,0,0" 
                 VerticalAlignment="Center" Width="215" Click="ZoomPrototypeButton_OnClick" Height="74" FontSize="18.667" IsEnabled="True"/>
            <Label x:Name="label" Content="In order to start the test please select an eye tracker" HorizontalAlignment="Center" Margin="0,46,0,0" VerticalAlignment="Top"/>
            <CheckBox x:Name="checkBox" Content="Mouse Mode" HorizontalAlignment="Center" Margin="0,187,0,0" VerticalAlignment="Top"/>
        </Grid>
    </DockPanel>
</Window>
