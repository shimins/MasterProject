<Window x:Class="WPF.ConnectToTracker"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="Eye Trackers" Height="300" Width="318.837">
    <Grid>
        <Label x:Name="eyeTrackers" Content="Available Eyetrackers:" HorizontalAlignment="Left" Margin="10,31,0,0" VerticalAlignment="Top"/>
        <ComboBox Height="21" HorizontalAlignment="Right" Margin="0,33,19,0" Name="TrackerCombo" VerticalAlignment="Top" Width="155" SelectionChanged="TrackerCombo_OnSelectionChanged"/>
        <Button Height="23" Margin="0,85,0,0" Name="TrackButton" VerticalAlignment="Top" HorizontalAlignment="Center" Width="99" 
                Click="TrackButton_OnClick" IsEnabled="False">Track</Button>
        <Button Height="23" Margin="0,140,0,0" Name="CaliberationButton" VerticalAlignment="Top" HorizontalAlignment="Center" Width="99" 
                Click="CaliberationButton_OnClick" IsEnabled="False">Caliberation</Button>
    </Grid>
</Window>
